@model Ingredient

@{
    ViewData["Title"] = "Update Stock - " + Model.Name;
}

<h1>Update Stock</h1>
<h4>@Model.Name</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="StockUpdate">
            <input type="hidden" asp-for="IngredientId" />

            <div class="form-group">
                <label class="control-label">Current Stock</label>
                <input class="form-control" value="@Model.CurrentStock @Model.UnitOfMeasure" readonly />
            </div>

            <div class="form-group">
                <label class="control-label">Adjustment Amount</label>
                <input name="adjustment" class="form-control" min="0.01" step="0.01" required />
            </div>

            <div class="form-group">
                <label class="control-label">Operation</label>
                <select name="operation" class="form-control">
                    <option value="add">Add to Stock</option>
                    <option value="subtract">Subtract from Stock</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>